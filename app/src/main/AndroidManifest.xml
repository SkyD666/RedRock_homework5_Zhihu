<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.homework.zhihu">

    <application
        android:name="com.homework.zhihu.ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_mylauncher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Logined"></activity>
        <activity
            android:name=".Register"
            android:label="@string/register"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".LoginByUsername"
            android:label="@string/loginByUsername"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>